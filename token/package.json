{
    "scripts": {
        "dfx_install": "DFX_VERSION=0.15.0 sh -ci \"$(curl -fsSL https://sdk.dfinity.org/install.sh)\"",
        "replica_start": "dfx start --background",
        "replica_stop": "dfx stop",
        "deploy": "dfx deploy token",
        "deploy_mainnet": "dfx deploy --network ic token",
        "canister_uninstall": "dfx canister uninstall-code token",
        "canister_call_get_message": "dfx canister call token getMessage",
        "canister_call_set_message": "dfx canister call token setMessage '(\"Hello world!\")'"
    },
    "dependencies": {
        "azle": "0.18.2"
    }
}
